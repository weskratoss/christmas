<!-- Sounds -->
<audio id="popSound" src="https://cdn.pixabay.com/audio/2022/03/15/audio_5f3b5c2e67.mp3"></audio>
<audio id="jingleSound" src="https://cdn.pixabay.com/audio/2021/11/30/audio_38e1c3c8f7.mp3" loop></audio>

<script>
  const card = document.getElementById("card");
  const popSound = document.getElementById("popSound");
  const jingleSound = document.getElementById("jingleSound");
  let soundOn = true;

  // Snow generator
  function createSnow() {
    const snow = document.createElement("div");
    snow.className = "snowflake";
    snow.innerText = "â„";
    snow.style.left = Math.random() * window.innerWidth + "px";
    snow.style.fontSize = Math.random() * 10 + 10 + "px";
    snow.style.animationDuration = Math.random() * 5 + 5 + "s";
    card.appendChild(snow);

    setTimeout(() => snow.remove(), 10000);
  }
  setInterval(createSnow, 200);

  // Dragging
  let dragged = null;

  document.addEventListener("mousedown", e => {
    if (e.target.classList.contains("draggable")) {
      dragged = e.target;
    }
  });

  document.addEventListener("mousemove", e => {
    if (dragged) {
      dragged.style.left = e.pageX - 20 + "px";
      dragged.style.top = e.pageY - 20 + "px";
    }
  });

  document.addEventListener("mouseup", () => dragged = null);

  // Toolbar items
  document.querySelectorAll(".item").forEach(item => {
    item.addEventListener("click", () => {
      const newItem = document.createElement("div");
      newItem.className = "draggable";
      newItem.innerText = item.innerText;
      newItem.style.left = "50%";
      newItem.style.top = "50%";
      card.appendChild(newItem);
      if (soundOn) popSound.play();
    });
  });

  // Sound toggle
  document.getElementById("soundToggle").onclick = () => {
    soundOn = !soundOn;
    if (soundOn) {
      jingleSound.play();
    } else {
      jingleSound.pause();
    }
  };

  jingleSound.volume = 0.4;
  jingleSound.play();

  // Drag & drop photos
  card.addEventListener("dragover", e => e.preventDefault());
  card.addEventListener("drop", e => {
    e.preventDefault();
    const file = e.dataTransfer.files[0];
    if (file && file.type.startsWith("image")) {
      const reader = new FileReader();
      reader.onload = () => {
        const img = document.createElement("img");
        img.src = reader.result;
        img.className = "draggable photo";
        img.style.left = e.pageX + "px";
        img.style.top = e.pageY + "px";
        card.appendChild(img);
        if (soundOn) popSound.play();
      };
      reader.readAsDataURL(file);
    }
  });
</script>

